{
  "_description": "Sequence 实盘交易服务器配置文件",
  "_version": "2.0.0",
  "_note": "配置优先级: 命令行 > 环境变量 > 配置文件 > 默认值",

  "server": {
    "_comment": "服务器网络和性能配置",

    "zmq_pub_port": 5555,
    "zmq_pull_port": 5556,
    "zmq_rep_port": 5557,
    "websocket_port": 8002,
    "bind_address": "0.0.0.0",

    "log_level": "info",
    "log_dir": "./logs",
    "log_to_console": true,
    "log_to_file": true,
    "log_max_size_mb": 100,
    "log_max_files": 10,

    "thread_pool_size": 4,
    "max_pending_orders": 1000,
    "order_timeout_ms": 5000
  },

  "okx": {
    "_comment": "OKX 交易所配置 (敏感信息建议使用环境变量)",

    "api_key": "",
    "secret_key": "",
    "passphrase": "",
    "is_testnet": false,

    "enable_public_ws": true,
    "enable_private_ws": true,
    "enable_business_ws": true,
    "ws_ping_interval_sec": 25,
    "ws_reconnect_delay_sec": 5,

    "proxy_host": "",
    "proxy_port": 0,

    "spot_symbols": [],
    "swap_symbols": []
  },

  "binance": {
    "_comment": "Binance 交易所配置 (敏感信息建议使用环境变量)",

    "api_key": "",
    "secret_key": "",
    "is_testnet": false,

    "enable_market_ws": true,
    "enable_user_ws": true,
    "ws_ping_interval_sec": 180,
    "ws_reconnect_delay_sec": 5,

    "proxy_host": "",
    "proxy_port": 0,

    "futures_symbols": []
  },

  "risk": {
    "_comment": "风控配置",

    "max_order_value": 10000.0,
    "max_order_quantity": 100.0,
    "max_position_value": 50000.0,
    "max_total_exposure": 100000.0,
    "max_open_orders": 50,

    "max_drawdown_pct": 0.10,
    "daily_loss_limit": 5000.0,

    "max_orders_per_second": 10,
    "max_orders_per_minute": 100
  },

  "custom": {
    "_comment": "自定义配置项",
    "feature_flags": {
      "enable_paper_trading": true,
      "enable_frontend_auth": false,
      "enable_rate_limiting": true
    }
  }
}
